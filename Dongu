import java.util.Scanner;
public class Dongu {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int n, toplam = 0;

        do {
            System.out.println("Lütfen Sayı Giriniz");
            n = scan.nextInt();
            if (n % 4 == 0 ) {
                toplam += n;
            }
        }
        while (n % 2 == 0);
        System.out.println(toplam);
    }
}
